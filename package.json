{
  "name": "scripteasy",
  "version": "0.0.0",
  "description": "The easy script runner",
  "license": "MIT",
  "author": "Aaron Levine <ald.levine@gmail.com>",
  "scripts": {
    "build": "node src/cli.js build",
    "precommit": "node src/cli.js precommit",
    "commitmsg": "node src/cli.js commitmsg",
    "docs": "node src/cli.js docs",
    "link": "node src/cli.js link",
    "test": "node src/cli.js test",
    "update": "node ./src/cli.js update",
    "version": "node ./src/cli.js version"
  },
  "config": { "commitizen": { "path": "./node_modules/cz-conventional-changelog" } },
  "dependencies": { "minimist": "^1.2.0" },
  "devDependencies": {
    "@commitlint/cli": "^4.3.0",
    "@commitlint/config-angular": "^4.3.0",
    "chai": "^4.1.2",
    "comptroller": "^0.3.0",
    "conventional-changelog-cli": "^1.3.4",
    "cz-conventional-changelog": "^2.1.0",
    "esdoc": "^1.0.4",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-node": "^1.0.2",
    "esdoc-standard-plugin": "^1.0.0",
    "husky": "^0.14.3",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0"
  },
  "cli": { "tease": "./src/cli.js" },
  "comptroller": {
    "source": "src/**/*",
    "dev": "test/**/*",
    "pretty": 80,
    "detective": { "parse": { "plugins": [ "objectRestSpread" ] } }
  },
  "scripteasy": {
    "build": [ "update", "link", "test", "docs" ],
    "precommit": {
      "try": [
        "git stash save --keep-index -q \"precommit stash\" || true",
        "build",
        "git add package.json docs"
      ],
      "catch": "echo \"An error occured!\"",
      "finally": [
        "git checkout stash -q -- .",
        "git stash drop"
      ]
    },
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "docs": "esdoc",
    "link": "comp link",
    "test": "nyc mocha",
    "update": "comp update -s",
    "version": [
      "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
      "git add CHANGELOG.md"
    ]
  }
}
